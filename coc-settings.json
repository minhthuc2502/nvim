  "clangd.semanticHighlighting": true,
  "clangd.arguments": [
    "--background-index",
    "-pretty",
    "--clang-tidy"
  ],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod"
      ],
      "disableWorkspaceFolders": true,
      "filetypes": [
        "go"
      ]
    }
  },
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/12.0.1/clangd_12.0.1/bin/clangd",
}
